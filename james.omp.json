{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": "{{if .Root}}(Admin){{end}} {{.Path}}",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "root",
            "style": "plain",
            "foreground": "#BF616A",
            "properties": {
              "prefix": "",
              "root_icon": "Admin"
            }
          },
          {
            "type": "session",
            "style": "plain",
            "foreground": "#46d422",
            "properties": {
                "postfix": ":"
            }
          },
          {
            "type": "path",
            "style": "plain",
            "foreground": "#c1c5c2",
            "properties": {
              "prefix": "",
              "postfix": "",
              "style": "full"
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "git",
            "style": "plain",
            "foreground": "#5fbfff",
            "properties": {
              "prefix": "[",
              "postfix": "]",
              "display_stash_count": true,
              "display_status": true,
              "display_status_detail": true,
              "display_upstream_icon": true,
              "status_colors_enabled": true,
              "branch_icon": "",
              "github_icon": "",
              "branch_behind_icon": "↓",
              "branch_ahead_icon": "↑",
              "branch_identical_icon": "≡",
              "display_branch_status": true,
              "working_color": "#E84855",
              "staging_color": "#2FDA4E",
              "ahead_color": "#003f39",
              "behind_color": "#adadad"
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "executiontime",
            "style": "plain",
            "foreground": "#A3BE8C",
            "properties": {
              "style": "austin"
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": false,
        "segments": [
          {
            "type": "exit",
            "style": "plain",
            "foreground": "#ffffff",
            "properties": {
              "prefix": "$",
              "display_exit_code": false,
              "error_color": "#BF616A",
              "always_enabled": true
            }
          }
        ]
      }
    ]
  }
  